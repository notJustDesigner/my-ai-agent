{
  "name": "my-ai-agent",
  "displayName": "my-ai-agent",
  "description": "It is a coding ai agent that can access locally installed ollama models. It has many functionalities like auto-completion, human-in-the-loop approval, chat pannel, line highlighting, step history pannel and local model selection.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.109.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
  "commands": [
    {
      "command": "aiAgent.selectModel",
      "title": "AI Agent: Select Ollama Model"
    },
    {
      "command": "aiAgent.openChat",
      "title": "AI Agent: Open Chat"
    },
    {
      "command": "aiAgent.clearHistory",
      "title": "AI Agent: Clear Step History"
    },
    {
      "command": "aiAgent.revertToStep",
      "title": "AI Agent: Revert to Step"
    },
    {
      "command": "aiAgent.viewStepDiff",
      "title": "AI Agent: View Step Diff"
    }
  ],
  "viewsContainers": {
    "activitybar": [
      {
        "id": "aiAgent",
        "title": "AI Agent",
        "icon": "$(robot)"
      }
    ]
  },
  "views": {
    "aiAgent": [
      {
        "type": "webview",
        "id": "aiAgent.chatView",
        "name": "Chat"
      },
      {
        "id": "aiAgent.stepHistory",
        "name": "Step History"
      }
    ]
  },
  "configuration": {
    "title": "AI Coding Agent",
    "properties": {
      "aiAgent.backendUrl": {
        "type": "string",
        "default": "http://localhost:8000",
        "description": "LangGraph backend URL"
      },
      "aiAgent.ollamaUrl": {
        "type": "string",
        "default": "http://localhost:11434",
        "description": "Ollama API URL"
      },
      "aiAgent.selectedModel": {
        "type": "string",
        "default": "",
        "description": "Currently selected Ollama model"
      },
      "aiAgent.highlightDuration": {
        "type": "number",
        "default": 5000,
        "description": "Duration to highlight changed lines (ms)"
      },
      "aiAgent.enableInlineCompletions": {
        "type": "boolean",
        "default": true,
        "description": "Enable inline code completions"
      }
    }
  }
},
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.109.0",
    "@types/ws": "^8.18.1",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.27.2",
    "eslint": "^9.39.2",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.54.0"
  },
  "dependencies": {
    "ws": "^8.19.0"
  }
}
